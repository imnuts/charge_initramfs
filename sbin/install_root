#!/system/bin/sh

mount -o remount,rw /
mount -o remount,rw /dev/block/stl10 /system

cat /sbin/Superuser.apk > /system/app/Superuser.apk
chmod 0644 /system/app/Superuser.apk
rm /sbin/Superuser.apk

cat /sbin/su > /system/xbin/su
chmod 6755 /system/xbin/su
rm /sbin/su

mount -o remount,ro /
mount -o remount,ro /dev/block/stl10 /system

exit

